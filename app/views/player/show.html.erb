				<td>personaname:</td>
				<td><%= @player.personaname %></td>
			</tr>
			<tr>
				<td>profileurl:</td>
				<td><%= @player.profileurl %></td>
			</tr>
			<tr>
				<td>avatar:</td>
				<td><img src="<%= @player.avatar %>"></td>
			</tr>
			<tr>
				<td>avatarmedium:</td>
				<td><img src="<%= @player.avatarmedium %>"></td>
			</tr>
			<tr>
				<td>avatarfull:</td>
				<td><img src="<%= @player.avatarfull %>"></td>
			</tr>
			<tr>
				<td>personastate:</td>
				<td><%= @player.personastate %></td>
			</tr>
			<tr>
